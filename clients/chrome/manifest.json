{
  "name": "Shouty",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Chrome client for a Shouty server",
  "icons": { "16": "icon16.png",
             "64": "icon64.png",
             "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_title": "Shouty Client",
    "default_popup": "popup.html"
  },
  "background": { "scripts": ["background.js"] },
  "permissions": [
    "*://*/",
    "notifications",
    "storage",
    "cookies"
  ]
}